.clickable-arrow {
  margin-right: 10rpx;
  width:30rpx;
  height:30rpx;
  border:1px solid #aaa;
  border-width:1px 1px 0 0;
  transform:translate(-20rpx, 0) rotate(45deg);
}

.price {
  font-size:16px;
  color:#f90000;
}

.price-wrapper {
  padding:30rpx 20rpx 20rpx;
  font-size:14px;
  text-align:right;
}

.welcome {
  align-items: left;
  padding:20rpx;
}
.welcome text {
  font-size:14px;
  line-height:1.6;
  color:#666;
}

.tags {
  padding:20rpx;
}

.tag {
  margin:0 20rpx 0 0;
  padding:6rpx 12rpx;
  border:1px solid #999;
  border-radius:4px;
  font-size:12px;
}
.tag:active {
  border-color:red;
  color:red;
}

.cover-img {
  display: block;
  width:100%;
  height:200px;
}

.policy {
  display: block;
  padding:0 30rpx 40rpx;
  text-align: right;
  font-size:14px;
  text-decoration: underline;
}

.picker-date {
  padding:6rpx 0;
}