/**app.wxss**/
page {
  background: #eee;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  box-sizing: border-box;
  background:#fff;
} 

.hint-text {
  font-size: 12px;
  color:#9a9a9a;
}

.list-ctrl-item {
  background: #fff;
  padding:25rpx 0;
}

.list-ctrl-item + .list-ctrl-item {
  margin-top:30rpx;
}

.ctrl-text {
  padding:0 20rpx;
  font-size:14px;
  color:#9a9a9a;
}

.arrow-container {
  display: flex;
  flex-direction:row;
  justify-content:space-between;
  align-items: center;
}

.btn-primary {
  margin:30rpx 20rpx 0;
  font-size:16px;
  color:#fff;
  background:#ff9000;
}

.btn-primary[disabled] {
  background:#eee;
}